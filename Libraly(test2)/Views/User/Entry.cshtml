@using Libraly.Logic.Models.UserDTO

@{
    ViewData["Title"] = "Entry";
}

@model LoginViewModel

<div>
    <div class="container row">
        <div class="col-md-3">

        </div>

        <form class="col-md-6" method="post" asp-controller="User" asp-action="Entry">
            <div class="card-columns card col-xl-12 form-centre ">
                <div class="editor-label form-group">

                    <label asp-for="UserName" class="float-left"></label>
                    <input asp-for="UserName" class="form-control" placeholder="Nagibator" />
                    <span asp-validation-for="UserName" style="border-color:red; color:red "></span>
                </div>
                <div class=" editor-label form-group">
                    <label asp-for="Password" class="float-left"></label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" style="border-color:red;color:red"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block" type="submit">Вход</button>
                </div>

            </div>
        </form>

        <div class="col-md-3">

        </div>
    </div>
</div>