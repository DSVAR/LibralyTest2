@{
    ViewData["Title"] = "LoginPartial";
}


<li class="nav-item ml-auto">
    @if (!User.Identity.IsAuthenticated)
    {
        <a class="nav-item text-dark" asp-controller="User" asp-action="Entry">Вход</a>
        <a class="nav-item">\</a>
        <a class="nav-item text-dark" asp-controller="User" asp-action="Register">Регистрация</a>
    }
    else
    {
        <form method="post" asp-controller="User" asp-action="Logout">

            <a class="nav-item text-dark" asp-area="Account" asp-controller="AC" asp-action="Index">@User.Identity.Name</a>

            <a class="nav-item">\</a>
            <input type="submit" value="Выход" />
        </form>
    }
</li>
